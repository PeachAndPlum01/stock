# 股票投资信息展示系统 - 环境配置文件
# 复制此文件为 .env 并填写实际配置
# ⚠️ 生产环境必须使用强密码！

# Tushare API Token
TUSHARE_TOKEN=your_tushare_token_here

# MySQL配置 - 生产环境必须修改！
MYSQL_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MYSQL_DATABASE=stock_investment
MYSQL_HOST=localhost
MYSQL_PORT=3306

# MySQL业务用户配置（各服务独立账号）
MYSQL_AUTH_USER=stock_auth_user
MYSQL_AUTH_PASSWORD=CHANGE_ME_AUTH_PASSWORD
MYSQL_DATA_USER=stock_data_user
MYSQL_DATA_PASSWORD=CHANGE_ME_DATA_PASSWORD
MYSQL_INVESTMENT_USER=stock_investment_user
MYSQL_INVESTMENT_PASSWORD=CHANGE_ME_INVESTMENT_PASSWORD
MYSQL_CORRELATION_USER=stock_correlation_user
MYSQL_CORRELATION_PASSWORD=CHANGE_ME_CORRELATION_PASSWORD

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# RabbitMQ配置 - 生产环境必须修改！
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=stock_admin
RABBITMQ_PASSWORD=CHANGE_ME_RABBITMQ_PASSWORD

# JWT配置 - 生产环境必须使用强密钥！
JWT_SECRET=CHANGE_ME_USE_RANDOM_256BIT_KEY_HERE
JWT_EXPIRATION=86400000

# Jasypt加密密钥（用于配置文件加密）
JASYPT_ENCRYPTOR_PASSWORD=CHANGE_ME_JASYPT_PASSWORD

# 服务端口配置
GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
DATA_SERVICE_PORT=8082
INVESTMENT_SERVICE_PORT=8083
CORRELATION_SERVICE_PORT=8084

# 前端配置
FRONTEND_PORT=5173

# 环境标识
SPRING_PROFILES_ACTIVE=dev
